{
  "build": [{
    "patterns": ["src/**/*.js"],
    "command": "npm run build:js -- --only",
    "appendFiles": true,
    "appendSeparator": ","
  }, {
    "patterns": ["src/**/*.js"],
    "command": "npm run build:flow"
  }, {
    "patterns": ["src/**/*.js"],
    "settle": 500,
    "command": "npm link --ignore-scripts"
  }]
}
